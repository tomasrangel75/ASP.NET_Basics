@model ASP.NET_MVC5_Entity.ViewModels.AlunosVM

<div>
	<h2>Lista de Alunos Cadastrados</h2>
</div>
<div>
	<table class="table">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.aluno.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.aluno.DtNascimento)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.aluno.Idade)
			</th>
			<th></th>

		</tr>

		@foreach (var item in Model.alunos)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DtNascimento)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Idade)
				</td>
				<td>
					@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
					@Html.ActionLink("Details", "Details", new { id = item.Id }) |
					@Html.ActionLink("Delete", "Delete", new { id = item.Id })
				</td>

			</tr>
		}

	</table>
</div>


